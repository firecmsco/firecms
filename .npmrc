# Use workspace protocol for local packages
link-workspace-packages=true

# Hoist dependencies to root when possible
hoist=true

# Force hoist Express types to ensure consistency across monorepo
public-hoist-pattern[]=@types/express*
public-hoist-pattern[]=express

# Save exact versions
save-exact=true

# Use the node_modules layout that's compatible with most tools
node-linker=hoisted

# Automatically install peer dependencies
auto-install-peers=true

# Store location (optional - customize if needed)
# store-dir=~/.pnpm-store
