        <section class="bg-black py-16 sm:py-24">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mt-16 sm:mt-24 grid grid-cols-1 lg:grid-cols-6 gap-12 items-center">
                    <div class="lg:order-last lg:col-span-4 relative w-full rounded-2xl overflow-hidden ring-1 ring-gray-800">
