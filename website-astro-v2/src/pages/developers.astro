                            <!--        src="/img/mm_body_demo_2025.webm"-->
                            <!--        type="video/webm"-->
                            <!--/>-->
                            <source
                                    src="/img/mm_body_demo_wide.mp4"
                                    type="video/mp4"
                            />
                        </video>


                    </div>
                    <div class="mt-8 lg:mt-0 self-start lg:col-span-4">
                        <h3 class="text-xl font-semibold text-white">Radical React Extensibility</h3>
