g w---
import Layout from "../layouts/Layout.astro";
import { CodeBlock } from "../components/CodeBlock";
import { DataTalkDemo } from "../components/DataTalkDemo";
// The Layout component should handle the Header and Footer, if not, re-import them here.
// import Header from "../components/Header.astro";
// import Footer from "../components/Footer.astro";

const title = "FireCMS for Developers - The Developer-First Framework for Modern Back-Office Apps";
const description = "Build powerful internal tools, CRUD interfaces, and custom admin panels without the frontend hassle. Built with React and TypeScript for ultimate flexibility and control.";
---

<Layout title={title} description={description}>

    <main>
        <section class="relative isolate overflow-hidden bg-linear-to-br from-black to-gray-950 pt-24 pb-16 sm:pt-32 sm:pb-24 lg:pt-40 lg:pb-24 border-b border-gray-800">
            <!-- Background accents and subtle grid -->
            <div class="pointer-events-none absolute inset-0 -z-10">
                <div class="absolute inset-x-0 top-0 h-px bg-linear-to-r from-transparent via-white/10 to-transparent"></div>
                <div class="absolute -top-40 left-1/2 -translate-x-1/2 w-[900px] h-[900px] rounded-full bg-primary/5 blur-3xl opacity-60"></div>
                <div class="absolute -bottom-40 right-1/3 w-[700px] h-[700px] rounded-full bg-blue-500/5 blur-3xl opacity-50"></div>
                <div class="absolute inset-0 bg-[linear-gradient(to_right,rgba(255,255,255,0.06)_1px,transparent_1px),linear-gradient(to_bottom,rgba(255,255,255,0.06)_1px,transparent_1px)] bg-[size:40px_40px] opacity-10"></div>
            </div>

            <div class="px-4 mx-auto max-w-7xl text-center lg:px-12">
                <div class="inline-flex items-center py-1.5 px-3 mb-6 text-sm rounded-full bg-gray-800/40 text-gray-400 ring-1 ring-inset ring-white/10 mx-auto" role="status">
                    <span class="text-sm font-medium">React + TypeScript. Full control, zero UI grind.</span>
                </div>
                <h1 class="mb-8 text-5xl font-extrabold tracking-tight leading-none md:text-6xl text-white font-sans">
                    Build Back-Offices <b>Without the Frontend Hassle</b>
                </h1>
                <p class="mb-10 text-lg leading-8 text-gray-300 lg:text-xl sm:px-16 xl:px-48">
                    FireCMS is the developer-first framework you'll love to use. Build powerful, fast, and flexible
                    internal tools, CRUD interfaces, and admin panels with React and TypeScript.
                </p>
            </div>
        </section>

        <section class="bg-black py-12 border-b border-gray-800">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <h2 class="text-center text-lg font-semibold leading-8 text-gray-400">
                    Trusted by developers at forward-thinking companies
                </h2>
                <div class="mx-auto mt-10 grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-5">
                    <img class="col-span-2 max-h-12 w-full object-contain lg:col-span-1"
                         src="https://tailwindui.com/img/logos/158x48/transistor-logo-white.svg" alt="Transistor"
                         width="158" height="48">
                    <img class="col-span-2 max-h-12 w-full object-contain lg:col-span-1"
                         src="https://tailwindui.com/img/logos/158x48/reform-logo-white.svg" alt="Reform" width="158"
                         height="48">
                    <img class="col-span-2 max-h-12 w-full object-contain lg:col-span-1"
                         src="https://tailwindui.com/img/logos/158x48/tuple-logo-white.svg" alt="Tuple" width="158"
                         height="48">
                    <img class="col-span-2 max-h-12 w-full object-contain sm:col-start-2 lg:col-span-1"
                         src="https://tailwindui.com/img/logos/158x48/savvycal-logo-white.svg" alt="SavvyCal"
                         width="158" height="48">
                    <img class="col-span-2 col-start-2 max-h-12 w-full object-contain sm:col-start-auto lg:col-span-1"
                         src="https://tailwindui.com/img/logos/158x48/statamic-logo-white.svg" alt="Statamic"
                         width="158" height="48">
                </div>
            </div>
        </section>

        <section class="bg-black py-16 sm:py-24 border-b border-gray-800">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl text-center mb-16">
                    <h2 class="text-3xl font-medium tracking-tight text-white sm:text-4xl">Choose Your Path</h2>
                    <p class="mt-4 text-lg leading-8 text-gray-400">Get started instantly with our managed cloud or
                        self-host the open-source framework for full control.</p>
                </div>
                <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
                    <div class="relative flex flex-col rounded-2xl bg-gradient-to-br from-primary/10 to-blue-900/10 p-8 ring-2 ring-inset ring-primary/30">
                        <h3 class="text-2xl font-medium text-white mb-2">FireCMS Cloud</h3>
                        <p class="text-primary text-lg font-semibold mb-4">Best for Startups & MVPs</p>
                        <p class="text-gray-300 text-lg mb-6">For maximum speed and zero maintenance. Launch your admin
                            panel in minutes.</p>
                        <ul class="space-y-3 mb-8 flex-grow">
                            <li class="flex items-start gap-3">
                                <svg class="h-6 w-6 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24"
                                     stroke-width="2" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <span class="text-gray-300">Instant setup - no deployment needed</span></li>
                            <li class="flex items-start gap-3">
                                <svg class="h-6 w-6 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24"
                                     stroke-width="2" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <span class="text-gray-300">Automatic updates and maintenance</span></li>
                            <li class="flex items-start gap-3">
                                <svg class="h-6 w-6 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24"
                                     stroke-width="2" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <span class="text-gray-300">Generous free tier to get started</span></li>
                        </ul>
                        <a href="https://app.firecms.co" target="_blank" rel="noopener noreferrer"
                           class="inline-flex items-center justify-center gap-x-2 rounded-md bg-primary px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-primary-dark transition-all duration-200 ease-in-out btn-glow">Get
                            Started with Cloud <img
                                    src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/arrow-right.svg" alt=""
                                    class="h-5 w-5 text-white filter invert"/></a>
                    </div>
                    <div class="relative flex flex-col rounded-2xl bg-gray-900/50 p-8 ring-1 ring-inset ring-gray-800">
                        <h3 class="text-2xl font-medium text-white mb-2">Self-Hosted</h3>
                        <p class="text-primary text-lg font-semibold mb-4">Best for Agencies & Custom Builds</p>
                        <p class="text-gray-300 text-lg mb-6">For maximum control and deep customization. Deploy
                            anywhere.</p>
                        <ul class="space-y-3 mb-8 flex-grow">
                            <li class="flex items-start gap-3">
                                <svg class="h-6 w-6 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24"
                                     stroke-width="2" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <span class="text-gray-300">Full source code access (MIT license)</span></li>
                            <li class="flex items-start gap-3">
                                <svg class="h-6 w-6 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24"
                                     stroke-width="2" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <span class="text-gray-300">Deploy in your own infrastructure</span></li>
                            <li class="flex items-start gap-3">
                                <svg class="h-6 w-6 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24"
                                     stroke-width="2" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <span class="text-gray-300">Extend with your own React components</span></li>
                        </ul>
                        <a href="/docs" rel="noopener noreferrer"
                           class="inline-flex items-center justify-center gap-x-2 rounded-md border border-gray-700 bg-gray-800 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-gray-700 transition-all duration-200 ease-in-out">View
                            Self-Hosted Docs <img
                                    src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/arrow-right.svg" alt=""
                                    class="h-5 w-5 text-white filter invert"/></a>
                    </div>
                </div>
            </div>
        </section>

        <section class="bg-black py-16 sm:py-24 border-b border-gray-800">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl lg:text-center">
                    <h2 class="text-base font-semibold leading-7 text-primary">A Toolkit That Just Works</h2>
                    <p class="mt-2 text-3xl font-medium tracking-tight text-white sm:text-4xl">Everything you need.
                        Nothing you don't.</p>
                    <p class="mt-6 text-lg leading-8 text-gray-400">
                        Stop reinventing the wheel. FireCMS provides a production-ready toolkit of components and logic,
                        so you can focus on the features that make your app unique.
                    </p>
                </div>

                <div classd="mt-16 sm:mt-24 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                    <div class="relative w-full rounded-2xl overflow-hidden ring-1 ring-gray-800">
                        <img src="httpsStorage://firecms-public-assets.appspot.com/sites/firecms/images/schema_to_ui.webp"
                             alt="Schema as Code demo"
                             class="w-full h-auto bg-gray-900"
                        />
                    </div>
                    <div class="mt-8 lg:mt-0">
                        <h3 class="text-xl font-semibold text-white">Schema as Code, with Validation</h3>
                        <p class="mt-4 text-lg text-gray-400">
                            Define your data models in TypeScript. Your code is the single source of truth, giving you
                            version control and type-safety. FireCMS automatically generates all CRUD views and forms,
                            with <strong>built-in validation</strong> (required, min/max, regex) that works out of the
                            box.
                        </p>
                    </div>
                </div>

                <div class="mt-16 sm:mt-24 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                    <div class="lg:order-last relative w-full rounded-2xl overflow-hidden ring-1 ring-gray-800">
                        <img src="httpsStorage://firecms-public-assets.appspot.com/sites/firecms/images/notion_style_editor.webp"
                             alt="Advanced data fields"
                             class="w-full h-auto bg-gray-900"
                        />
                    </div>
                    <div class="mt-8 lg:mt-0">
                        <h3 class="text-xl font-semibold text-white">Over 20+ Powerful Data Fields</h3>
                        <p class="mt-4 text-lg text-gray-400">
                            We've built all the complex fields you don't want to. Get a <strong>Notion-style rich text
                            editor</strong>, file uploads to Firebase Storage, <strong>relational data
                            (references)</strong>, enums, arrays,
                            maps, and more, all as pre-built components.
                        </p>
                    </div>
                </div>

                <div class="mt-16 sm:mt-24 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                    <div class="relative w-full rounded-2xl overflow-hidden ring-1 ring-gray-800">
                        <img src="httpsStorage://firecms-public-assets.appspot.com/sites/firecms/images/custom_top_level_view.webp"
                             alt="Custom React component demo"
                             class="w-full h-auto bg-gray-900"
                        />
                    </div>
                    <div class="mt-8 lg:mt-0">
                        <h3 class="text-xl font-semibold text-white">Radical React Extensibility</h3>
                        <p class="mt-4 text-lg text-gray-400">
                            If you can build it in React, you can build it in FireCMS. Create your own custom form
                            fields or build <strong>entirely new top-level views</strong> (like a custom dashboard) and
                            add them to
                            the main navigation. No black boxes.
                        </p>
                    </div>
                </div>

                <div class="mt-16 sm:mt-24 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                    <div class="lg:order-last relative w-full rounded-2xl overflow-hidden">
                        <CodeBlock
                                language="typescript"
                                code={`import { buildCollection } from "@firecms/core";

export const productsCollection = buildCollection({
    name: "Products",
    path: "products",
    callbacks: {
        onSave: async ({ values }) => {
            // e.g., send a notification
            await sendSlackMessage("Product updated: \${values.name}");
            
            // e.g., modify data before saving
            values.updatedAt = new Date();
            return values;
        }
    }
    // ...properties
});`}
                                client:load
                        />
                    </div>
                    <div class="mt-8 lg:mt-0">
                        <h3 class="text-xl font-semibold text-white">Built-in Business Logic</h3>
                        <p class="mt-4 text-lg text-gray-400">
                            Run your custom code during the data lifecycle. Use <strong><code>onSave</code></strong>,
                            <strong><code>onDelete</code></strong>, and other
                            callbacks to trigger cloud functions, send notifications, clean data, or integrate with
                            third-party APIs right from your CMS configuration.
                        </p>
                    </div>
                </div>

                <div class="mt-16 sm:mt-24 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                    <div class="relative w-full rounded-2xl overflow-hidden ring-1 ring-gray-800">
                        <img src="httpsStorage://firecms-public-assets.appspot.com/sites/firecms/images/roles.webp"
                             alt="Roles and permissions setup"
                             class="w-full h-auto bg-gray-900"
                        />
                    </div>
                    <div class="mt-8 lg:mt-0">
                        <h3 class="text-xl font-semibold text-white">Auth & Permissions, Solved</h3>
                        <p class="mt-4 text-lg text-gray-400">
                            Integrates with Firebase Authentication by default. Define <strong>granular, path-based
                            permissions</strong> to control exactly who can read, write, or delete data. Need enterprise
                            auth?
                            We support <strong>SAML and SSO</strong> in our PRO plans.
                        </p>
                    </div>
                </div>

                <div class="mt-16 sm:mt-24 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                    <div class="lg:order-last relative w-full rounded-2xl overflow-hidden ring-1 ring-gray-800">
                        <img src="httpsStorage://firecms-public-assets.appspot.com/sites/firecms/images/inline_editing.webp"
                             alt="Airtable-like UI demo"
                             class="w-full h-auto bg-gray-900"
                        />
                    </div>
                    <div class="mt-8 lg:mt-0">
                        <h3 class="text-xl font-semibold text-white">Production-Ready UI Out of the Box</h3>
                        <p class="mt-4 text-lg text-gray-400">
                            Every collection you define automatically gets its own intuitive CRUD interface, including
                            a beautiful, <strong>Airtable-like spreadsheet view</strong> with inline editing, powerful
                            filtering,
                            sorting, and searching. No frontend work required.
                        </p>
                    </div>
                </div>

            </div>
        </section>

        <section class="bg-black py-16 sm:py-24 border-b border-gray-800">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-3xl text-center mb-16">
                    <h2 class="text-3xl font-medium tracking-tight text-white sm:text-4xl">Example 1: From Code to
                        CRUD</h2>
                    <p class="mt-6 text-lg leading-8 text-gray-400">This simple collection definition is all it takes
                        for FireCMS to generate a full-featured, production-ready CRUD interface.
                    </p>
                </div>

                <div class="mx-auto max-w-4xl">
                    <div class="relative rounded-2xl overflow-hidden">
                        <CodeBlock
                                language="typescript"
                                code={`import { buildCollection } from "@firecms/core";

export const productsCollection = buildCollection({
    name: "Products",
    path: "products",
    properties: {
        name: {
            name: "Name",
            dataType: "string",
            validation: { required: true }
        },
        price: {
            name: "Price",
            dataType: "number",
            validation: { min: 0 }
        },
        status: {
            name: "Status",
            dataType: "string",
            enumValues: {
                published: "Published",
                draft: "Draft"
            }
        }
    }
});`}
                                client:load
                        />
                    </div>
                </div>
            </div>
        </section>

        <section class="bg-black py-16 sm:py-24 border-b border-gray-800">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl text-center mb-16">
                    <h2 class="text-3xl font-medium tracking-tight text-white sm:text-4xl">Example 2: Build a Custom
                        View</h2>
                    <p class="mt-6 text-lg leading-8 text-gray-400">Use the built-in data hooks (like
                        <code>useCollectionFetch</code>) to create your own React components and add them directly to
                        the main
                        navigation.</p>
                </div>
                <div class="relative max-w-2xl mx-auto rounded-2xl overflow-hidden">
                    <CodeBlock
                            language="typescript"
                            code={`import { useCollectionFetch } from "@firecms/core";

export function CustomAnalyticsDashboard() {
  const { data, loading } = useCollectionFetch({
    path: "orders",
    collection: ordersCollection
  });

  const totalRevenue = data?.reduce(
    (sum, order) => sum + order.total, 0
  );

  return (
    <div className="custom-dashboard">
      <h1>Revenue Dashboard</h1>
      <div className="metric-card">
        <span>Total Revenue</span>
        <span>{totalRevenue}</span>
      </div>
      {/* Add your custom charts and visualizations */}
    </div>
  );
}`}
                            client:load
                    />
                </div>
            </div>
        </section>

        <section class="bg-black py-16 sm:py-24 border-b border-gray-800">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="grid grid-cols-1 gap-16 lg:grid-cols-12 lg:gap-12 items-center">
                    <div class="relative rounded-2xl overflow-hidden lg:col-span-7">
                        <DataTalkDemo
                                client:load
                                height={500}
                                exchanges={[
                                    {
                                        query: "Update status to 'active' for all users who signed up last month",
                                        responseText: "I'll help you update the status for users who signed up last month. Here's the code to do that:",
                                        code: `const lastMonth = new Date();
lastMonth.setMonth(lastMonth.getMonth() - 1);

const users = await db.collection('users')
  .where('signupDate', '>=', lastMonth)
  .get();

const batch = db.batch();
users.docs.forEach(doc => {
  batch.update(doc.ref, { status: 'active' });
});

await batch.commit();
console.log("Updated \${users.size} users");`
                                    }
                                ]}
                        />
                    </div>
                    <div class="lg:col-span-5">
                        <h2 class="text-3xl font-medium tracking-tight text-white sm:text-4xl mb-6">Save Hours on
                            Data-Ops</h2>
                        <p class="text-lg text-gray-400 mb-8">Stop writing one-off scripts for batch updates or complex
                            queries. DataTalk lets you operate directly on your data in natural language, turning hours
                            of tedious dev work into seconds of typing.</p>
                        <p class="text-gray-300 font-mono text-sm">"Update status to 'active' for all users who
                            signed up last month"</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="bg-black pt-16 pb-12 sm:pt-24 sm:pb-16 border-b border-gray-800">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-3xl text-center mb-12">
                    <h2 class="text-3xl font-medium tracking-tight text-white sm:text-4xl mb-6">Start Your Self-Hosted
                        Project</h2>
                </div>
                <div class="max-w-3xl mx-auto">
                    <div id="cli-tabs" class="w-full max-w-md mx-auto">
                        <div class="mb-2 flex space-x-1 rounded-t-lg bg-gray-900/50 p-1" role="tablist">
                            <button type="button"
                                    class="tab-btn active w-full rounded-md p-2 text-center text-sm font-semibold text-white focus:outline-none focus:ring-2 focus:ring-primary/50"
                                    role="tab" aria-selected="true" data-target="npx-panel">npx
                            </button>
                            <button type="button"
                                    class="tab-btn w-full rounded-md p-2 text-center text-sm font-semibold text-gray-400 focus:outline-none focus:ring-2 focus:ring-primary/50"
                                    role="tab" aria-selected="false" data-target="yarn-panel">yarn
                            </button>
                            <button type="button"
                                    class="tab-btn w-full rounded-md p-2 text-center text-sm font-semibold text-gray-400 focus:outline-none focus:ring-2 focus:ring-primary/50"
                                    role="tab" aria-selected="false" data-target="pnpm-panel">pnpm
                            </button>
                        </div>
                        <div class="relative rounded-b-xl overflow-hidden ring-1 ring-gray-800 bg-gray-900">
                            <div id="npx-panel" role="tabpanel" class="tab-panel p-6">
                                <code class="text-primary font-mono text-lg">npx create-firecms-app</code>
                            </div>
                            <div id="yarn-panel" role="tabpanel" class="tab-panel hidden p-6">
                                <code class="text-primary font-mono text-lg">yarn create firecms-app</code>
                            </div>
                            <div id="pnpm-panel" role="tabpanel" class="tab-panel hidden p-6">
                                <code class="text-primary font-mono text-lg">pnpm create firecms-app</code>
                            </div>
                        </div>
                    </div>

                    <div class="mt-8 text-center">
                        <a href="/docs/getting-started"
                           class="inline-flex items-center gap-x-2 text-primary hover:text-primary-light transition-colors font-semibold">
                            View Full Documentation
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <section class="bg-black py-16 sm:py-24">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl text-center mb-16">
                    <h2 class="text-3xl font-medium tracking-tight text-white sm:text-4xl">Ready to Build?</h2>
                    <p class="mt-4 text-lg leading-8 text-gray-400">Start building in seconds with our free cloud tier
                        or dive into the open-source docs.</p>
                </div>
                <div class="mx-auto grid max-w-md grid-cols-1 gap-8 lg:max-w-4xl lg:grid-cols-2">
                    <div class="flex flex-col items-center text-center rounded-2xl bg-gray-900/50 p-8 ring-1 ring-inset ring-gray-800">
                        <h3 class="text-2xl font-medium text-white mb-4">Try FireCMS Cloud</h3>
