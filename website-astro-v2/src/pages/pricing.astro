---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

---

<Layout
  title="Pricing - Choose Your Path | DATAKI"
  description="Powerful, flexible pricing for every team. Choose between Cloud or Self-Hosted deployment options. Start free or scale with your needs."
>
  <Header />

  <main class="bg-gray-950">
    <!-- Hero Section -->
    <section class="relative isolate overflow-hidden pt-24 pb-12 sm:pt-32 sm:pb-16">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-4xl text-center">
          <p class="text-base leading-7 text-primary font-semibold">Choose Your Path</p>
          <h1 class="mt-4 text-5xl font-bold tracking-tight text-white sm:text-6xl font-sans">
            Powerful, Flexible Pricing for Every Team
          </h1>
        </div>

        <!-- Toggle Switch -->
        <div class="mx-auto mt-12 flex items-center justify-center gap-6">
          <span id="cloud-label" class="text-lg font-semibold text-white transition-opacity duration-300">
            Cloud
          </span>
          <button
            id="deployment-toggle"
            role="switch"
            aria-checked="true"
            aria-labelledby="cloud-label self-hosted-label"
            class="relative inline-flex h-12 w-24 flex-shrink-0 cursor-pointer rounded-full border-2 border-primary bg-gray-800 transition-colors duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-gray-950"
          >
            <span class="sr-only">Toggle deployment type</span>
            <span
              id="toggle-indicator"
              class="pointer-events-none inline-block h-10 w-10 transform rounded-full bg-primary shadow-lg ring-0 transition-transform duration-300 ease-in-out translate-x-0"
            ></span>
          </button>
          <span id="self-hosted-label" class="text-lg font-semibold text-gray-400 transition-opacity duration-300">
            Self-Hosted
          </span>
        </div>
      </div>
    </section>

