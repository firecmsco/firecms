<script>
  // Toggle functionality
  const toggle = document.getElementById('deployment-toggle');
  const toggleIndicator = document.getElementById('toggle-indicator');
  const cloudLabel = document.getElementById('cloud-label');
  const selfHostedLabel = document.getElementById('self-hosted-label');
  const cloudPricing = document.getElementById('cloud-pricing');
  const selfHostedPricing = document.getElementById('self-hosted-pricing');

  let isCloud = true;

  toggle?.addEventListener('click', () => {
    isCloud = !isCloud;

    if (isCloud) {
      // Switch to Cloud
      toggle.setAttribute('aria-checked', 'true');
      toggleIndicator?.classList.remove('translate-x-12');
      toggleIndicator?.classList.add('translate-x-0');
      cloudLabel?.classList.remove('text-gray-400');
      cloudLabel?.classList.add('text-white');
      selfHostedLabel?.classList.remove('text-white');
      selfHostedLabel?.classList.add('text-gray-400');
      cloudPricing?.classList.remove('hidden');
      selfHostedPricing?.classList.add('hidden');
    } else {
      // Switch to Self-Hosted
      toggle.setAttribute('aria-checked', 'false');
      toggleIndicator?.classList.remove('translate-x-0');
      toggleIndicator?.classList.add('translate-x-12');
      cloudLabel?.classList.remove('text-white');
      cloudLabel?.classList.add('text-gray-400');
      selfHostedLabel?.classList.remove('text-gray-400');
      selfHostedLabel?.classList.add('text-white');
      cloudPricing?.classList.add('hidden');
      selfHostedPricing?.classList.remove('hidden');
    }
  });
</script>

