                        <a href="/contact"
                           class="flex-shrink-0 rounded-md border border-gray-700 bg-gray-900/50 px-6 py-3 text-center text-sm font-semibold text-white shadow-sm hover:bg-gray-800 focus-visible:outline-gray-700 transition-colors duration-200">
                            Contact Sales
                        </a>
                    </div>
                </div>

                <div class="mt-16 text-center">
                    <a href="/compare"
                       class="text-base font-semibold leading-6 text-primary hover:text-primary-light transition-colors">
