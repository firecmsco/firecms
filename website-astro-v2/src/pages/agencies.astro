<Layout title={title} description={description}>

    <main class="flex-grow">
        <!-- Hero Section -->
        <section
                class="relative isolate overflow-hidden bg-linear-to-br from-black to-gray-950 pt-24 pb-16 sm:pt-32 sm:pb-24 lg:pt-40 lg:pb-24">
            <div class="px-4 mx-auto max-w-7xl text-center lg:px-12">
                <h1 class="mb-6 text-4xl font-medium tracking-tight md:text-5xl lg:text-6xl text-white font-sans">
                    Deliver Exceptional Client Projects, Faster
                </h1>
                <p class="mb-10 text-lg leading-8 text-gray-300 lg:text-xl sm:px-16 xl:px-48">
                    Empower your agency to build robust, custom admin panels and CMS solutions
                    <b> efficiently</b>. Delight clients, streamline workflows, and boost profitability.
                </p>
            </div>
