---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = "Contact FireCMS - Get in Touch";
const description = "We're here to help. Whether you have a question about features, pricing, or anything else, our team is ready to answer all your questions.";
---

<Layout title={title} description={description}>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative isolate overflow-hidden bg-linear-to-br from-black to-gray-900 pt-24 pb-16 sm:pt-32 sm:pb-24 lg:pt-40 lg:pb-24 border-b border-gray-800">
      <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80" aria-hidden="true">
        <div class="blob-shape relative left-[calc(50%-11rem)] aspect-1155/678 w-144.5 -translate-x-2/3 rotate-30 bg-linear-to-tr from-primary to-blue-900 opacity-15 sm:left-[calc(50%-30rem)] sm:w-288.75"></div>
      </div>

      <div class="px-4 mx-auto max-w-7xl text-center lg:px-12">
        <h1 class="mb-8 text-5xl font-extrabold tracking-tight leading-none md:text-6xl text-white font-sans">
          Get in Touch
        </h1>
        <p class="mb-10 text-lg leading-8 text-gray-300 lg:text-xl sm:px-16 xl:px-48">
          We're here to help. Whether you have a question about features, pricing, or anything else, our team is ready to answer all your questions.
        </p>
      </div>

      <div class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]" aria-hidden="true">
        <div class="blob-shape relative left-[calc(50%+3rem)] aspect-1155/678 w-144.5 -translate-x-1/2 bg-linear-to-tr from-primary to-blue-900 opacity-10 sm:left-[calc(50%+36rem)] sm:w-288.75"></div>
      </div>
    </section>

    <!-- Contact Options Section -->
    <section class="bg-black py-16 sm:py-24 border-b border-gray-800">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
          <!-- Sales Inquiries -->
          <div class="relative overflow-hidden rounded-2xl bg-gray-900/50 p-8 md:p-12 ring-1 ring-inset ring-gray-800">
            <div class="flex items-center gap-4 mb-6">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
                <svg class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z" />
                </svg>
              </div>
            </div>
            <h3 class="text-2xl font-semibold text-white mb-4">Sales Inquiries</h3>
            <p class="text-gray-400 mb-8">For questions about PRO and Enterprise plans, or to schedule a demo.</p>
            <div class="space-y-4">
              <a href="mailto:sales@firecms.co"
                 class="block w-full text-center rounded-md bg-primary px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-primary-dark transition-all duration-200 btn-glow">
                Email: sales@firecms.co
              </a>
              <a href="https://calendly.com/firecms/demo"
                 target="_blank"
                 rel="noopener noreferrer"
                 class="block w-full text-center rounded-md border border-gray-700 bg-gray-800 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-gray-700 transition-all duration-200">
                Book a Demo
              </a>
            </div>
          </div>

          <!-- General Support -->
          <div class="relative overflow-hidden rounded-2xl bg-gray-900/50 p-8 md:p-12 ring-1 ring-inset ring-gray-800">
            <div class="flex items-center gap-4 mb-6">
              <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary/10">
                <svg class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 01-.825-.242m9.345-8.334a2.126 2.126 0 00-.476-.095 48.64 48.64 0 00-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0011.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
                </svg>
              </div>
            </div>
            <h3 class="text-2xl font-semibold text-white mb-4">General Support</h3>
            <p class="text-gray-400 mb-8">For technical questions and community support.</p>
            <div class="space-y-4">
              <a href="https://discord.gg/firecms"
                 target="_blank"
                 rel="noopener noreferrer"
                 class="block w-full text-center rounded-md bg-primary px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-primary-dark transition-all duration-200 btn-glow">
                Join our Discord
              </a>
              <a href="https://github.com/firecmsco/firecms/discussions"
                 target="_blank"
                 rel="noopener noreferrer"
                 class="block w-full text-center rounded-md border border-gray-700 bg-gray-800 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-gray-700 transition-all duration-200">
                GitHub Discussions
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="bg-black py-16 sm:py-24 border-b border-gray-800">
      <div class="mx-auto max-w-3xl px-6 lg:px-8">
        <div class="mx-auto text-center mb-12">
          <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl mb-4">Send us a message</h2>
          <p class="text-lg text-gray-400">Fill out the form below and we'll get back to you as soon as possible.</p>
        </div>
        <form class="space-y-6">
          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <div>
              <label for="first-name" class="block text-sm font-semibold text-white mb-2">First name</label>
              <input type="text" name="first-name" id="first-name" autocomplete="given-name"
                     class="block w-full rounded-md bg-gray-900 border border-gray-800 px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-primary focus:outline-none">
            </div>
            <div>
              <label for="last-name" class="block text-sm font-semibold text-white mb-2">Last name</label>
              <input type="text" name="last-name" id="last-name" autocomplete="family-name"
                     class="block w-full rounded-md bg-gray-900 border border-gray-800 px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-primary focus:outline-none">
            </div>
          </div>
          <div>
            <label for="email" class="block text-sm font-semibold text-white mb-2">Email</label>
            <input type="email" name="email" id="email" autocomplete="email"
                   class="block w-full rounded-md bg-gray-900 border border-gray-800 px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-primary focus:outline-none">
          </div>
          <div>
            <label for="company" class="block text-sm font-semibold text-white mb-2">Company</label>
            <input type="text" name="company" id="company" autocomplete="organization"
                   class="block w-full rounded-md bg-gray-900 border border-gray-800 px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-primary focus:outline-none">
          </div>
          <div>
            <label for="message" class="block text-sm font-semibold text-white mb-2">Message</label>
            <textarea name="message" id="message" rows="4"
                      class="block w-full rounded-md bg-gray-900 border border-gray-800 px-4 py-3 text-white placeholder-gray-500 focus:border-primary focus:ring-primary focus:outline-none"></textarea>
          </div>
          <div>
            <button type="submit"
                    class="w-full rounded-md bg-primary px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-primary-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary transition-all duration-200 btn-glow">
              Send Message
            </button>
          </div>
        </form>
      </div>
    </section>

    <!-- Office Section -->
    <section class="bg-black py-16 sm:py-24">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
          <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl mb-4">Our Community</h2>
          <p class="text-lg text-gray-400 mb-8">FireCMS is built by a distributed team of developers from around the world, all passionate about making developers' lives easier.</p>
          <div class="flex justify-center gap-6">
            <a href="https://github.com/firecmsco/firecms" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-primary transition-colors">
              <span class="sr-only">GitHub</span>
              <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
            </a>
            <a href="https://discord.gg/firecms" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-primary transition-colors">
              <span class="sr-only">Discord</span>
              <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
              </svg>
            </a>
            <a href="https://twitter.com/firecmsco" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-primary transition-colors">
              <span class="sr-only">Twitter</span>
              <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/firecms/Header.astro';
import Footer from '../../components/firecms/Footer.astro';

const title = "Why FireCMS - More Than a Headless CMS, More Flexible Than an Internal Tool Builder";
const description = "FireCMS hits the sweet spot, giving you the best admin panel experience for Firebase and MongoDB projects, with the deep customization of a true developer framework.";
---

<Layout title={title} description={description}>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative isolate overflow-hidden bg-linear-to-br from-black to-gray-900 pt-24 pb-16 sm:pt-32 sm:pb-24 lg:pt-40 lg:pb-24 border-b border-gray-800">
      <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80" aria-hidden="true">
        <div class="blob-shape relative left-[calc(50%-11rem)] aspect-1155/678 w-144.5 -translate-x-2/3 rotate-30 bg-linear-to-tr from-primary to-blue-900 opacity-15 sm:left-[calc(50%-30rem)] sm:w-288.75"></div>
      </div>

      <div class="px-4 mx-auto max-w-7xl text-center lg:px-12">
        <h1 class="mb-8 text-5xl font-extrabold tracking-tight leading-none md:text-6xl text-white font-sans">
          More Than a Headless CMS.<br/>More Flexible Than an Internal Tool Builder.
        </h1>
        <p class="mb-10 text-lg leading-8 text-gray-300 lg:text-xl sm:px-16 xl:px-48">
          FireCMS hits the sweet spot, giving you the <b>best admin panel experience</b> for Firebase and MongoDB projects, with the <b>deep customization</b> of a true developer framework.
        </p>
      </div>

      <div class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]" aria-hidden="true">
        <div class="blob-shape relative left-[calc(50%+3rem)] aspect-1155/678 w-144.5 -translate-x-1/2 bg-linear-to-tr from-primary to-blue-900 opacity-10 sm:left-[calc(50%+36rem)] sm:w-288.75"></div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="bg-black py-16 sm:py-24 border-b border-gray-800">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center mb-16">
          <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">The Proof is in the Product</h2>
        </div>
        <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
          <!-- Testimonial 1 -->
          <figure class="rounded-2xl bg-gray-900/50 p-8 ring-1 ring-gray-800">
            <blockquote class="text-lg leading-7 text-gray-300 mb-6">
              <p>"So far, this has been the missing piece of the puzzle for running a Firebase back-end. I love how we can just throw some React in there and it all feels so seamless."</p>
            </blockquote>
            <figcaption class="flex items-center gap-x-4">
              <div class="h-10 w-10 rounded-full bg-primary/20 flex items-center justify-center">
                <span class="text-primary font-bold">JC</span>
              </div>
              <div>
                <div class="font-semibold text-white">John Coppa</div>
                <div class="text-gray-400 text-sm">CTO at EasyHome</div>
              </div>
            </figcaption>
          </figure>

          <!-- Testimonial 2 -->
          <figure class="rounded-2xl bg-gray-900/50 p-8 ring-1 ring-gray-800">
            <blockquote class="text-lg leading-7 text-gray-300 mb-6">
              <p>"I've tried many other CMS including Strapi, Sanity, contentful, Builder.io, none of them gave me better experience than FireCMS!"</p>
            </blockquote>
            <figcaption class="flex items-center gap-x-4">
              <div class="h-10 w-10 rounded-full bg-primary/20 flex items-center justify-center">
                <span class="text-primary font-bold">FH</span>
              </div>
              <div>
                <div class="font-semibold text-white">Fulei Huang</div>
                <div class="text-gray-400 text-sm">Software Engineer, Microsoft</div>
              </div>
            </figcaption>
          </figure>

          <!-- Testimonial 3 -->
          <figure class="rounded-2xl bg-gray-900/50 p-8 ring-1 ring-gray-800">
            <blockquote class="text-lg leading-7 text-gray-300 mb-6">
              <p>"FireCMS saved us months of development time. The flexibility to customize everything while having a beautiful UI out of the box is incredible."</p>
            </blockquote>
            <figcaption class="flex items-center gap-x-4">
              <div class="h-10 w-10 rounded-full bg-primary/20 flex items-center justify-center">
                <span class="text-primary font-bold">IK</span>
              </div>
              <div>
                <div class="font-semibold text-white">IKEA Team</div>
                <div class="text-gray-400 text-sm">Development Team</div>
              </div>
            </figcaption>
          </figure>
        </div>
      </div>
    </section>

    <!-- Competitive Positioning Section -->
    <section class="bg-black py-16 sm:py-24 border-b border-gray-800">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center mb-16">
          <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">FireCMS vs. The Alternatives</h2>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full text-left">
            <thead class="border-b border-gray-800">
              <tr>
                <th class="py-4 px-4 text-white font-semibold"></th>
                <th class="py-4 px-4 text-center">
                  <div class="text-primary font-bold text-lg">FireCMS</div>
                </th>
                <th class="py-4 px-4 text-center text-gray-400">Traditional CMS</th>
                <th class="py-4 px-4 text-center text-gray-400">Low-Code Tools</th>
                <th class="py-4 px-4 text-center text-gray-400">Custom Build</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-800">
              <tr>
                <td class="py-4 px-4 text-gray-300">Time to Production</td>
                <td class="py-4 px-4 text-center text-green-500">Minutes</td>
                <td class="py-4 px-4 text-center text-yellow-500">Days</td>
                <td class="py-4 px-4 text-center text-yellow-500">Hours</td>
                <td class="py-4 px-4 text-center text-red-500">Months</td>
              </tr>
              <tr>
                <td class="py-4 px-4 text-gray-300">Customization</td>
                <td class="py-4 px-4 text-center text-green-500">Full Control</td>
                <td class="py-4 px-4 text-center text-red-500">Limited</td>
                <td class="py-4 px-4 text-center text-yellow-500">Moderate</td>
                <td class="py-4 px-4 text-center text-green-500">Full Control</td>
              </tr>
              <tr>
                <td class="py-4 px-4 text-gray-300">Data Ownership</td>
                <td class="py-4 px-4 text-center text-green-500">100% Yours</td>
                <td class="py-4 px-4 text-center text-red-500">Vendor Lock-in</td>
                <td class="py-4 px-4 text-center text-red-500">Vendor Lock-in</td>
                <td class="py-4 px-4 text-center text-green-500">100% Yours</td>
              </tr>
              <tr>
                <td class="py-4 px-4 text-gray-300">Development Speed</td>
                <td class="py-4 px-4 text-center text-green-500">Fast</td>
                <td class="py-4 px-4 text-center text-yellow-500">Moderate</td>
                <td class="py-4 px-4 text-center text-green-500">Fast</td>
                <td class="py-4 px-4 text-center text-red-500">Slow</td>
              </tr>
              <tr>
                <td class="py-4 px-4 text-gray-300">Open Source</td>
                <td class="py-4 px-4 text-center text-green-500">✓</td>
                <td class="py-4 px-4 text-center text-red-500">✗</td>
                <td class="py-4 px-4 text-center text-red-500">✗</td>
                <td class="py-4 px-4 text-center text-yellow-500">Maybe</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <!-- Open-Source Advantage Section -->
    <section class="bg-black py-16 sm:py-24 border-b border-gray-800">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="grid grid-cols-1 gap-16 lg:grid-cols-2 lg:gap-8 items-center">
          <div>
            <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl mb-6">Build on a Foundation of Trust</h2>
            <p class="text-lg text-gray-400 mb-8">FireCMS is proudly <b>open-source</b>. This means you get complete transparency, benefit from a passionate community, and never have to worry about vendor lock-in.</p>
            <ul class="space-y-4 mb-8">
              <li class="flex items-start gap-3">
                <svg class="h-6 w-6 text-primary flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
