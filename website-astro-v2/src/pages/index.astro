---
import Layout from '../layouts/Layout.astro';
import FireCMSHeader from '../components/FireCMSHeader.astro';
import FireCMSFooter from '../components/FireCMSFooter.astro';

const title = "FireCMS - The Headless CMS Framework for Firebase & MongoDB";
const description = "Build powerful back-office apps in minutes. Go live instantly with our managed Cloud, or self-host our open-source framework for full control.";
---

<Layout title={title} description={description}>
  <FireCMSHeader />

  <main>
    <!-- Hero Section -->
    <section class="relative isolate overflow-hidden bg-linear-to-br from-black to-gray-900 pt-24 pb-16 sm:pt-32 sm:pb-24 lg:pt-48 lg:pb-32 border-b border-gray-800">
      <!-- Background gradient top shape -->
      <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80" aria-hidden="true">
        <div class="blob-shape relative left-[calc(50%-11rem)] aspect-1155/678 w-144.5 -translate-x-2/3 rotate-30 bg-linear-to-tr from-primary to-blue-900 opacity-15 sm:left-[calc(50%-30rem)] sm:w-288.75"></div>
      </div>

      <div class="px-4 mx-auto max-w-7xl text-center lg:px-12">
        <h1 class="mb-8 text-6xl font-extrabold tracking-tight leading-none md:text-6xl lg:text-6xl text-white font-sans">
          The Headless CMS Framework for Firebase & MongoDB
        </h1>
        <p class="mb-10 text-lg leading-8 text-gray-300 lg:text-xl sm:px-16 xl:px-48">
          Build powerful back-office apps in minutes. Go live instantly with our <b>managed Cloud</b>, or self-host our <b>open-source framework</b> for full control.
        </p>
        <div class="flex items-center justify-center gap-x-6">
          <a href="https://app.firecms.co"
             class="inline-flex items-center gap-x-2 rounded-md bg-primary px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-primary-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary transition-all duration-200 ease-in-out btn-glow">
            Start Building for Free
            <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/arrow-right.svg" alt="" class="h-5 w-5 text-white filter invert" />
          </a>
          <a href="/developers"
             class="inline-flex items-center gap-x-2 rounded-md border border-gray-700 bg-gray-900/50 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-gray-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-700 transition-all duration-200 ease-in-out">
            Explore Self-Hosted
          </a>
        </div>
      </div>

      <!-- Bottom gradient shape -->
      <div class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]" aria-hidden="true">
        <div class="blob-shape relative left-[calc(50%+3rem)] aspect-1155/678 w-144.5 -translate-x-1/2 bg-linear-to-tr from-primary to-blue-900 opacity-10 sm:left-[calc(50%+36rem)] sm:w-288.75"></div>
      </div>
    </section>

    <!-- Social Proof Section -->
    <section class="bg-black py-16 sm:py-24 border-b border-gray-800">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <h2 class="text-center text-lg font-semibold leading-8 text-gray-400 mb-10">
          Trusted by developers at leading companies
        </h2>
        <div class="mx-auto grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-3">
          <div class="col-span-2 max-h-12 w-full object-contain lg:col-span-1 flex items-center justify-center">
            <div class="text-white text-2xl font-bold opacity-50">Microsoft</div>
          </div>
          <div class="col-span-2 max-h-12 w-full object-contain lg:col-span-1 flex items-center justify-center">
            <div class="text-white text-2xl font-bold opacity-50">IKEA</div>
          </div>
          <div class="col-span-2 max-h-12 w-full object-contain lg:col-span-1 flex items-center justify-center">
            <div class="text-white text-2xl font-bold opacity-50">EasyHome</div>
          </div>
        </div>
      </div>
    </section>

    <!-- What Can You Build Section -->
    <section class="bg-black py-16 sm:py-24 border-b border-gray-800">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
          <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">One Framework, Endless Back-Office Solutions</h2>
        </div>
        <div class="mx-auto mt-16 max-w-7xl">
          <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
            <!-- Tab 1: Content Management Systems -->
            <div class="relative overflow-hidden rounded-2xl bg-gray-900/50 p-8 ring-1 ring-inset ring-gray-800 hover:ring-primary/50 transition-all duration-300">
              <h3 class="text-xl font-semibold text-white mb-4">Content Management Systems</h3>
              <p class="text-gray-400">Power your blogs and marketing sites with an intuitive, Notion-style editor your content team will love.</p>
            </div>
            <!-- Tab 2: Internal Tools -->
            <div class="relative overflow-hidden rounded-2xl bg-gray-900/50 p-8 ring-1 ring-inset ring-gray-800 hover:ring-primary/50 transition-all duration-300">
              <h3 class="text-xl font-semibold text-white mb-4">Internal Tools</h3>
              <p class="text-gray-400">Build robust internal dashboards for customer support, inventory management, or logistics tracking, without the frontend hassle.</p>
            </div>
            <!-- Tab 3: Custom Admin Panels -->
            <div class="relative overflow-hidden rounded-2xl bg-gray-900/50 p-8 ring-1 ring-inset ring-gray-800 hover:ring-primary/50 transition-all duration-300">
              <h3 class="text-xl font-semibold text-white mb-4">Custom Admin Panels</h3>
              <p class="text-gray-400">Create bespoke, data-intensive admin panels for any application, with full control to add custom views and business logic.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Hero Feature Showcase: Spreadsheet View -->
    <section class="bg-black py-16 sm:py-24 border-b border-gray-800">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center mb-16">
          <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">Edit Data as Easily as a Spreadsheet</h2>
          <p class="mt-6 text-lg leading-8 text-gray-400">Our AirTable-like UI with powerful inline editing, sorting, and filtering is a game-changer for developers and content managers alike.</p>
        </div>
        <div class="relative rounded-2xl overflow-hidden ring-1 ring-gray-800">
          <div class="aspect-video bg-gray-900 flex items-center justify-center">
            <div class="text-gray-500 text-lg">[Spreadsheet View Demo GIF]</div>
          </div>
        </div>
      </div>
    </section>

    <!-- DataTalk Showcase Section -->
    <section class="bg-black py-16 sm:py-24 border-b border-gray-800">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center mb-16">
          <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">Talk to Your Data.</h2>
          <p class="mt-6 text-lg leading-8 text-gray-400">Query, update, and manage your Firestore collections using simple, natural language. No need to write one-off scripts for batch updates.</p>
        </div>
        <div class="relative rounded-2xl overflow-hidden ring-1 ring-gray-800">
          <div class="aspect-video bg-gray-900 flex items-center justify-center">
            <div class="text-gray-500 text-lg">[DataTalk Demo GIF]</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Persona Routing Section -->
    <section class="bg-black py-16 sm:py-24 border-b border-gray-800">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center mb-16">
          <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">Built for Your Workflow</h2>
        </div>
        <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
          <!-- Card 1: For Startups -->
          <div class="relative overflow-hidden rounded-2xl bg-gray-900/50 p-8 ring-1 ring-inset ring-gray-800 hover:ring-primary transition-all duration-300">
            <h3 class="text-2xl font-semibold text-white mb-4">For Startups</h3>
            <p class="text-gray-400 mb-6">Launch your MVP's back-office in minutes and iterate at lightning speed.</p>
            <a href="/startups" class="inline-flex items-center gap-x-2 text-primary hover:text-primary-light font-semibold transition-colors">
              Learn More
              <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/arrow-right.svg" alt="" class="h-4 w-4 filter brightness-0 invert" style="filter: invert(40%) sepia(100%) saturate(2000%) hue-rotate(195deg) brightness(100%);" />
            </a>
          </div>
          <!-- Card 2: For Agencies -->
          <div class="relative overflow-hidden rounded-2xl bg-gray-900/50 p-8 ring-1 ring-inset ring-gray-800 hover:ring-primary transition-all duration-300">
            <h3 class="text-2xl font-semibold text-white mb-4">For Agencies</h3>
            <p class="text-gray-400 mb-6">Deliver deeply customized, self-hosted solutions for your clients.</p>
            <a href="/agencies" class="inline-flex items-center gap-x-2 text-primary hover:text-primary-light font-semibold transition-colors">
              Learn More
              <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/arrow-right.svg" alt="" class="h-4 w-4 filter brightness-0 invert" style="filter: invert(40%) sepia(100%) saturate(2000%) hue-rotate(195deg) brightness(100%);" />
            </a>
          </div>
          <!-- Card 3: For Internal Tools -->
          <div class="relative overflow-hidden rounded-2xl bg-gray-900/50 p-8 ring-1 ring-inset ring-gray-800 hover:ring-primary transition-all duration-300">
            <h3 class="text-2xl font-semibold text-white mb-4">For Internal Tools</h3>
            <p class="text-gray-400 mb-6">Build secure, scalable, and reliable tools for your enterprise.</p>
            <a href="/internal-tools" class="inline-flex items-center gap-x-2 text-primary hover:text-primary-light font-semibold transition-colors">
              Learn More
              <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/arrow-right.svg" alt="" class="h-4 w-4 filter brightness-0 invert" style="filter: invert(40%) sepia(100%) saturate(2000%) hue-rotate(195deg) brightness(100%);" />
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="bg-black py-16 sm:py-24">
      <div class="mx-auto max-w-7xl px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl mb-8">Ready to get started?</h2>
        <div class="flex items-center justify-center gap-x-6">
          <a href="https://app.firecms.co"
             class="inline-flex items-center gap-x-2 rounded-md bg-primary px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-primary-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary transition-all duration-200 ease-in-out btn-glow">
            Try FireCMS Cloud
            <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/arrow-right.svg" alt="" class="h-5 w-5 text-white filter invert" />
          </a>
          <a href="/developers"
             class="inline-flex items-center gap-x-2 text-white hover:text-primary transition-colors font-semibold">
            View Documentation
            <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/arrow-right.svg" alt="" class="h-4 w-4 text-white filter invert" />
          </a>
        </div>
      </div>
    </section>
  </main>

  <FireCMSFooter />
</Layout>

