---
import SectionBackgroundAccents from "./SectionBackgroundAccents.astro";

const footerNavs = [
    {
        title: "Solutions",
        links: [
            { label: "Startups", url: "/startups" },
            { label: "Agencies", url: "/agencies" },
        ],
    },
    {
        title: "Product",
        links: [
            { label: "Demo", url: "https://demo.firecms.co", external: true },
            { label: "Features", url: "/features" },
            { label: "Developers", url: "/developers" },
            { label: "UI Components", url: "/ui" },
            { label: "Pricing", url: "/pricing" },
            { label: "Security", url: "/security" },
        ],
    },
    {
        title: "Company",
        links: [
            { label: "About", url: "/about" },
            { label: "Why FireCMS", url: "/why-firecms" },
            { label: "Contact", url: "/contact" },
        ],
    },
    {
        title: "Legal",
        links: [
            { label: "Privacy Policy", url: "/policy/privacy_policy" },
            { label: "Terms of Service", url: "/policy/terms-of-service" },
        ],
    },
];
---

<footer class="p-4 sm:p-6 bg-black py-16 sm:py-24 border-t border-gray-800">
    <div class="mx-auto max-w-7xl">
        <div class="flex flex-col md:flex-row md:justify-between gap-8">
            <div>
                <div class="mb-6 md:mb-0">
                    <a href="/website-astro-v2/src/pages" class="flex items-center">
                        <span class="self-center text-lg font-semibold whitespace-nowrap text-white">FireCMS</span>
                    </a>
                </div>
                <div class="text-gray-400 mt-4 text-sm">
                    The Headless CMS Framework for Firebase
                </div>
            </div>
            <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-4">
                {footerNavs.map((nav) => (
                    <div>
                        <p class="mb-6 text-sm font-semibold uppercase text-white">{nav.title}</p>
                        <ul class="text-gray-400 space-y-3">
                            {nav.links.map((link) => (
                                <li>
                                    <a
                                        href={link.url}
                                        target={link.external ? "_blank" : "_self"}
                                        rel={link.external ? "noopener noreferrer" : ""}
                                        class="hover:underline hover:text-primary-light transition-colors duration-200"
                                    >
                                        {link.label}
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))}
            </div>
        </div>
        <SectionBackgroundAccents topLine={true} blob={{ position: "top", size: "lg" }}/>
        <div class="mt-8 pt-8 ">
