---
// Custom SiteTitle so the logo and "FireCMS" link match the main site and sit flush-left
import config from "virtual:starlight/user-config";
---

<a href={config.locales ? "/" + (Astro.locals.starlightRoute.locale ?? "") : "/"}
   class="flex items-center -m-1.5 relative gap-4">
    <img src="/img/firecms_logo.svg" class="h-8 w-8"
         alt="FireCMS Logo">
    <span class="self-center text-lg font-semibold whitespace-nowrap text-white">FireCMS</span>
</a>
