    "cross-env": "^7.0.3",
    "eslint-plugin-react-compiler": "beta",
    "firebase": "^10.14.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "rollup-preserve-directives": "^1.1.3",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "tsd": "^0.31.2",
    "typescript": "^5.8.3",
    "vite": "^5.4.17",
    "vite-plugin-static-copy": "^1.0.6"
