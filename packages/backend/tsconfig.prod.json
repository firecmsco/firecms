{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@firecms/core": [
        "../firecms_core/src"
      ],
      "@firecms/types": [
        "../firecms_core/src"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}

