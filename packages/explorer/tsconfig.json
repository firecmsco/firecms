{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNEXT",
    "target": "ESNEXT",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,

    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": [
      "vite/client",
      "node",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@firecms/core": [
        "../firecms_core/src"
      ],
      "@firecms/ui": [
        "../ui/src"
      ],
      "@firecms/formex": [
        "../formex/src"
      ]
    }
  },
  "include": [
    "src",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/test"
  ]
}
