---
import Layout from '../layouts/Layout.astro';

const title = "Contact FireCMS - Get in Touch";
const description = "We're here to help. Whether you have a question about features, pricing, or anything else, our team is ready to answer all your questions.";
---

<Layout title={title} description={description}>

  <main>
    <!-- Big Appointment CTA Section -->
    <section class="bg-black pt-24 pb-12 sm:pt-32 sm:pb-16">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <!-- Big CTA for Booking -->
        <div class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-primary to-blue-600 p-12 md:p-20 text-center ring-1 ring-inset ring-white/10 shadow-2xl">
          <div class="absolute inset-0 bg-[linear-gradient(to_right,rgba(255,255,255,0.1)_1px,transparent_1px),linear-gradient(to_bottom,rgba(255,255,255,0.1)_1px,transparent_1px)] bg-[size:40px_40px] opacity-20"></div>
          <div class="relative z-10">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-white/20 mb-8">
              <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5m-9-6h.008v.008H12v-.008zM12 15h.008v.008H12V15zm0 2.25h.008v.008H12v-.008zM9.75 15h.008v.008H9.75V15zm0 2.25h.008v.008H9.75v-.008zM7.5 15h.008v.008H7.5V15zm0 2.25h.008v.008H7.5v-.008zm6.75-4.5h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V15zm0 2.25h.008v.008h-.008v-.008zm2.25-4.5h.008v.008H16.5v-.008zm0 2.25h.008v.008H16.5V15z" />
              </svg>
            </div>
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">We Are Open!</h1>
            <p class="text-lg md:text-xl text-white/90 mb-6 max-w-2xl mx-auto">Schedule a call with our team to discuss your project, get a demo, or just say hello.</p>
            <p class="text-base text-white/80 mb-8">Or reach us at <a href="mailto:hello@firecms.co" class="font-semibold underline hover:text-white transition-colors">hello@firecms.co</a></p>
            <a href="https://calendar.app.google/QipmvFoUznse8KnNA"
               target="_blank"
               rel="noopener noreferrer"
               data-track
               id="contact-book-call-hero"
               class="inline-flex items-center gap-2 rounded-lg bg-white px-6 py-3 text-base font-semibold text-primary shadow-lg hover:bg-surface-50 transition-all duration-200">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
              </svg>
              Book a Call Now
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Community Section -->
    <section class="bg-black py-16 sm:py-24 border-t border-surface-800">
      <div class="mx-auto max-w-4xl px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Join Our Community</h2>
          <p class="text-lg text-surface-400">Get technical support and connect with other FireCMS developers</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Discord -->
          <a href="https://discord.gg/fxy7xsQm3m"
             target="_blank"
             rel="noopener noreferrer"
             data-track
             id="contact-join-discord"
             class="group relative overflow-hidden rounded-2xl bg-surface-900/50 p-8 md:p-10 ring-1 ring-inset ring-surface-800 hover:ring-primary transition-all duration-300">
            <div class="flex flex-col items-center text-center">
              <div class="flex h-16 w-16 items-center justify-center rounded-lg bg-[#5865F2]/10 mb-6 group-hover:scale-110 transition-transform">
                <svg class="w-10 h-10 text-[#5865F2]" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515a.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0a12.64 12.64 0 0 0-.617-1.25a.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057a19.9 19.9 0 0 0 5.993 3.03a.078.078 0 0 0 .084-.028a14.09 14.09 0 0 0 1.226-1.994a.076.076 0 0 0-.041-.106a13.107 13.107 0 0 1-1.872-.892a.077.077 0 0 1-.008-.128a10.2 10.2 0 0 0 .372-.292a.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127a12.299 12.299 0 0 1-1.873.892a.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028a19.839 19.839 0 0 0 6.002-3.03a.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.956-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419c0-1.333.955-2.419 2.157-2.419c1.21 0 2.176 1.096 2.157 2.42c0 1.333-.946 2.418-2.157 2.418z"/>
                </svg>
              </div>
              <h3 class="text-2xl font-semibold text-white mb-3">Discord Community</h3>
              <p class="text-surface-400 mb-6">Chat with the team and other developers in real-time</p>
              <span class="text-primary font-semibold group-hover:underline">Join Discord →</span>
            </div>
          </a>

          <!-- GitHub -->
          <a href="https://github.com/firecmsco/firecms"
             target="_blank"
             rel="noopener noreferrer"
             data-track
             id="contact-view-github"
             class="group relative overflow-hidden rounded-2xl bg-surface-900/50 p-8 md:p-10 ring-1 ring-inset ring-surface-800 hover:ring-primary transition-all duration-300">
            <div class="flex flex-col items-center text-center">
              <div class="flex h-16 w-16 items-center justify-center rounded-lg bg-white/10 mb-6 group-hover:scale-110 transition-transform">
                <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
