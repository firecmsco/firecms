---
import Layout from "../layouts/Layout.astro";
import ClientLogos from "../components/ClientLogos.astro";
import SectionBackgroundAccents from "../components/SectionBackgroundAccents.astro";
import BrowserFrame from "../components/BrowserFrame.astro";
import UsageExamples from "../components/UsageExamples.astro";

const title = "FireCMS for Agencies: Deliver Faster, Impress Clients";
const description = "Build custom admin panels & CMS for your clients efficiently with FireCMS. Reduce development time, enhance client satisfaction, and scale your agency's offerings.";

const breadcrumbs = [
    { name: "Home", url: "https://firecms.co" },
    { name: "Agencies", url: "https://firecms.co/agencies" }
];
---

<Layout title={title} description={description} breadcrumbs={breadcrumbs}>

    <main class="flex-grow">
        <!-- Hero Section -->
        <section
                class="relative isolate overflow-hidden bg-linear-to-br from-black to-surface-950 pt-24 pb-16 sm:pt-32 sm:pb-24 lg:pt-40 lg:pb-24">
            <div class="px-4 mx-auto max-w-7xl text-center lg:px-12">
                <h1 class="mb-6 text-4xl font-medium tracking-tight md:text-5xl lg:text-6xl text-white font-sans animate-on-scroll fade-in-up">
                    Deliver Exceptional Client Projects, Faster
                </h1>
                <p class="mb-10 text-lg leading-8 text-surface-300 lg:text-xl sm:px-16 xl:px-48 animate-on-scroll fade-in-up delay-100">
                    Empower your agency to build robust, custom admin panels and CMS solutions
                    <b> efficiently</b>. Delight clients, streamline workflows, and boost profitability.
                </p>
            </div>
        </section>

        <section class="relative isolate bg-black py-16">
            <SectionBackgroundAccents topLine={true}/>
            <div class="mx-auto max-w-7xl px-8 lg:px-12">
                <div class="mx-auto mt-4 mb-8 animate-on-scroll fade-in">
                    <ClientLogos filter="agencies"/>
                </div>
            </div>
        </section>


        <!-- Agency Advantage Section -->
        <section class="relative isolate bg-black py-16 sm:py-24">
            <SectionBackgroundAccents topLine={true}/>
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-4xl text-center animate-on-scroll fade-in-up">
                    <div class="flex items-center justify-center mb-4">
                        <h3 class="m-0 text-3xl font-bold text-white">
                            Your Agency's Secret Weapon
                        </h3>
                    </div>
                    <p class="text-xl md:text-2xl mb-4 text-surface-300">
                        Client demands are high, timelines are tight. Building custom back-office
                        solutions from scratch eats into margins and slows down delivery.
                    </p>
                    <p class="text-lg text-surface-400">
                        FireCMS provides a powerful, flexible foundation. Build bespoke admin interfaces
                        and CMS tailored to client needs in a fraction of the time, freeing up your
                        developers for complex features.
                    </p>
                </div>
            </div>
        </section>


        <UsageExamples/>


        <section class="relative isolate bg-black py-16 sm:py-24">
            <SectionBackgroundAccents topLine={true}/>
            <div class="max-w-7xl mx-auto px-6 lg:px-8">
                <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-center animate-on-scroll fade-in-up delay-100">
                    <div class="lg:col-span-6">
                        <div class="text-center mb-12 animate-on-scroll fade-in-up">
                            <h2 class="text-3xl font-medium tracking-tight text-white sm:text-4xl">Accelerate Delivery, Enhance
                                Value</h2>
                        </div>
                        <div class="flex items-start gap-4 mb-6">
                            <div class="h-10 w-10 rounded-lg bg-green-500/15 flex items-center justify-center">
                                <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/bolt.svg" alt="Speed"
                                     class="h-6 w-6 filter invert opacity-80"/>
                            </div>
                            <div>
                                <h3 class="text-xl font-semibold text-white mb-1">Rapid Development</h3>
                                <p class="text-surface-400">Pre-built components and schema inference reduce weeks of work
                                    to days.</p>
                            </div>
                        </div>
                        <div class="flex items-start gap-4 mb-6">
                            <div class="h-10 w-10 rounded-lg bg-indigo-500/15 flex items-center justify-center">
                                <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/sliders-horizontal.svg"
                                     alt="Customization" class="h-6 w-6 filter invert opacity-80"/>
                            </div>
                            <div>
                                <h3 class="text-xl font-semibold text-white mb-1">Deep Customization</h3>
                                <p class="text-surface-400">Custom fields, views, actions, and branding for each
                                    client.</p>
                            </div>
                        </div>
                        <div class="flex items-start gap-4">
                            <div class="h-10 w-10 rounded-lg bg-purple-500/15 flex items-center justify-center">
                                <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/users.svg"
                                     alt="Empower" class="h-6 w-6 filter invert opacity-80"/>
                            </div>
                            <div>
                                <h3 class="text-xl font-semibold text-white mb-1">Client Empowerment</h3>
                                <p class="text-surface-400">Simple UX for non-technical stakeholders to reduce your support
                                    load.</p>
                            </div>
                        </div>
                    </div>
                    <div class="lg:col-span-6">
                        <div
                                style={{
                                    aspectRatio: 550 / 692,
                                    maxHeight: "692px",
                                    maxWidth: "550px"
                                }}
                                class={" flex content-center justify-center"}>
                            <img
                                    class={"pointer-events-none rounded-2xl border border-surface-800 shadow-lg"}
                                    width="100%"
                                    alt="FireCMS entity history and audit log showing data changes over time"
                                    src={"/img/history.png"}>
                            </img>
                        </div>

                    </div>
                </div>
            </div>
        </section>


        <!-- Easy to Customize Section -->
        <section class="relative isolate bg-black py-16 sm:py-24">
            <SectionBackgroundAccents topLine={true}/>
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center animate-on-scroll fade-in-up">
                    <div class="rounded-xl ring-1 ring-inset ring-surface-800 overflow-hidden">
                        <video
                                class="w-full h-auto"
                                loop
                                autoplay
                                muted
                                playsinline>
                            <source src="/img/custom_fields_dark_wide.mp4" type="video/mp4"/>
                        </video>
                    </div>
                    <div>
                        <div class="flex items-center mb-4">
                            <div class="h-10 w-10 mr-3 rounded-lg bg-primary/20 flex items-center justify-center">
                                <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/settings-2.svg"
                                     alt="Customize" class="h-6 w-6 filter invert opacity-80"/>
                            </div>
                            <h3 class="m-0 text-3xl font-bold text-white">
                                Easy to customize
                            </h3>
                        </div>
                        <p class="text-xl md:text-2xl mb-4 text-surface-300">
                            FireCMS is designed for developers. Customize every aspect to fit your clients' needs
                            perfectly.
                        </p>
                        <p class="text-lg text-surface-400">
                            Create custom form fields, override widgets, or build entirely new views with your own React
                            components. FireCMS provides the flexibility to deliver a truly bespoke experience.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Features for Agency Success Section -->
        <section class="relative isolate bg-black py-16 sm:py-24">
            <SectionBackgroundAccents topLine={true}/>
            <div class="max-w-7xl mx-auto px-6 lg:px-8">
                <div class="text-center mb-12">
                    <h2 class="text-3xl font-medium tracking-tight text-white sm:text-4xl">Features Built for
                        Agencies</h2>
                    <p class="text-xl text-surface-400">Tools to streamline your development process.</p>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- Feature Items -->
                    <div class="p-8 rounded-lg ring-1 ring-inset ring-surface-800 bg-surface-900/50">
                        <div class="flex items-start space-x-3">
                            <div class="h-8 w-8 rounded-md bg-surface-800 flex items-center justify-center flex-shrink-0">
                                <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/puzzle.svg"
                                     alt="Reusable" class="h-4 w-4 filter invert opacity-80"/>
                            </div>
                            <div>
                                <h3 class="text-lg font-semibold mb-1 text-white">Reusable Components</h3>
                                <p class="text-sm text-surface-400">Build custom fields and views once, reuse across client
                                    projects.</p>
                            </div>
                        </div>
                    </div>
                    <div class="p-8 rounded-lg ring-1 ring-inset ring-surface-800 bg-surface-900/50">
                        <div class="flex items-start space-x-3">
                            <div class="h-8 w-8 rounded-md bg-surface-800 flex items-center justify-center flex-shrink-0">
                                <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/palette.svg"
                                     alt="White label" class="h-4 w-4 filter invert opacity-80"/>
                            </div>
                            <div>
                                <h3 class="text-lg font-semibold mb-1 text-white">White-Labeling Ready</h3>
                                <p class="text-sm text-surface-400">Easily customize branding and themes to match client
                                    identity.</p>
                            </div>
                        </div>
                    </div>
                    <div class="p-8 rounded-lg ring-1 ring-inset ring-surface-800 bg-surface-900/50">
                        <div class="flex items-start space-x-3">
                            <div class="h-8 w-8 rounded-md bg-surface-800 flex items-center justify-center flex-shrink-0">
                                <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/shield-check.svg"
                                     alt="Permissions" class="h-4 w-4 filter invert opacity-80"/>
                            </div>
                            <div>
                                <h3 class="text-lg font-semibold mb-1 text-white">Granular Permissions</h3>
                                <p class="text-sm text-surface-400">Define precise roles and access control for different
                                    users.</p>
                            </div>
                        </div>
                    </div>
                    <div class="p-8 rounded-lg ring-1 ring-inset ring-surface-800 bg-surface-900/50">
                        <div class="flex items-start space-x-3">
                            <div class="h-8 w-8 rounded-md bg-surface-800 flex items-center justify-center flex-shrink-0">
                                <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/rocket.svg"
                                     alt="Deployment" class="h-4 w-4 filter invert opacity-80"/>
                            </div>
                            <div>
                                <h3 class="text-lg font-semibold mb-1 text-white">Fast Deployment</h3>
                                <p class="text-sm text-surface-400">Integrates smoothly with Firebase/GCP or self-host in
                                    minutes.</p>
                            </div>
                        </div>
                    </div>
                    <div class="p-8 rounded-lg ring-1 ring-inset ring-surface-800 bg-surface-900/50">
                        <div class="flex items-start space-x-3">
                            <div class="h-8 w-8 rounded-md bg-surface-800 flex items-center justify-center flex-shrink-0">
                                <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/cloud.svg" alt="Cloud"
                                     class="h-4 w-4 filter invert opacity-80"/>
                            </div>
                            <div>
                                <h3 class="text-lg font-semibold mb-1 text-white">Cloud or Self-Hosted</h3>
                                <p class="text-sm text-surface-400">Choose the best hosting option based on client
                                    needs.</p>
                            </div>
                        </div>
                    </div>
                    <div class="p-8 rounded-lg ring-1 ring-inset ring-surface-800 bg-surface-900/50">
                        <div class="flex items-start space-x-3">
                            <div class="h-8 w-8 rounded-md bg-surface-800 flex items-center justify-center flex-shrink-0">
                                <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/code-2.svg"
                                     alt="Developer friendly" class="h-4 w-4 filter invert opacity-80"/>
                            </div>
                            <div>
                                <h3 class="text-lg font-semibold mb-1 text-white">Developer Friendly</h3>
                                <p class="text-sm text-surface-400">React + TypeScript for a familiar and efficient DX.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <section class="relative isolate bg-black py-10 sm:py-12">
            <SectionBackgroundAccents topLine={true}/>
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="grid grid-cols-1 gap-8 sm:grid-cols-3 text-center animate-on-scroll scale-in">
                    <div>
                        <div class="text-4xl font-extrabold text-white">5×</div>
                        <div class="mt-1 text-surface-400">Faster project delivery</div>
                    </div>
                    <div>
                        <div class="text-4xl font-extrabold text-white"><span class="align-baseline">↓</span>80%</div>
                        <div class="mt-1 text-surface-400">Less boilerplate</div>
                    </div>
                    <div>
                        <div class="text-4xl font-extrabold text-white">100%</div>
                        <div class="mt-1 text-surface-400">Client ownership</div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Agency Client Showcase Section -->
        <section class="relative isolate bg-black py-16 sm:py-24">
            <SectionBackgroundAccents topLine={true}/>
            <div class="max-w-7xl mx-auto px-6 lg:px-8">
                <h2 class="text-3xl md:text-4xl font-medium tracking-tight mb-12 text-center text-white animate-on-scroll fade-in-up">
                    How Agencies Leverage FireCMS</h2>
                <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
                    <div class="group relative overflow-hidden p-8 rounded-lg ring-1 ring-inset ring-surface-800 bg-surface-900/50 flex flex-col transition-all duration-300 hover:ring-primary/30 animate-on-scroll scale-in"
                         data-spotlight-card>
                        <!-- Mouse spotlight effect -->
                        <div class="pointer-events-none absolute inset-0 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
                             data-spotlight></div>

                        <div class="relative z-10">
                            <div class="flex items-center mb-4">
                                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/20 mr-4 flex-shrink-0">
                                    <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/shopping-cart.svg"
                                         alt="E-commerce Icon"
                                         class="w-6 h-6 filter invert opacity-80"/>
                                </div>
                                <h3 class="text-xl font-semibold text-white">E-commerce Store</h3>
                            </div>
                            <div class="flex-grow mb-4">
                                <p class="text-sm text-surface-400 mb-2"><b>Challenge:</b> Needed a custom admin panel to
                                    manage products, orders, and customer data integrated with their existing Shopify
                                    backend.</p>
                                <p class="text-sm text-white"><b>FireCMS Solution:</b> Used FireCMS with custom actions
                                    and views to create a tailored interface, pulling data via APIs.</p>
                            </div>
                            <div class="mt-auto pt-4 border-t border-surface-800 flex items-start">
                                <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/check-circle.svg"
                                     alt="Checkmark"
                                     class="w-4 h-4 mr-2 filter invert opacity-80 flex-shrink-0 mt-0.5"/>
                                <span class="text-sm font-medium text-white">
                                    <b>Result:</b> Faster order processing and inventory management.
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="group relative overflow-hidden p-8 rounded-lg ring-1 ring-inset ring-surface-800 bg-surface-900/50 flex flex-col transition-all duration-300 hover:ring-primary/30 animate-on-scroll scale-in delay-100"
                         data-spotlight-card>
                        <!-- Mouse spotlight effect -->
                        <div class="pointer-events-none absolute inset-0 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
                             data-spotlight></div>

                        <div class="relative z-10">
                            <div class="flex items-center mb-4">
                                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/20 mr-4 flex-shrink-0">
                                    <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/settings-2.svg"
                                         alt="SaaS Platform Icon"
                                         class="w-6 h-6 filter invert opacity-80"/>
                                </div>
                                <h3 class="text-xl font-semibold text-white">SaaS Platform</h3>
                            </div>
                            <div class="flex-grow mb-4">
                                <p class="text-sm text-surface-400 mb-2"><b>Challenge:</b> Required an internal tool for
                                    the support team to manage user accounts, subscriptions, and feature flags.</p>
                                <p class="text-sm text-white"><b>FireCMS Solution:</b> Deployed FireCMS connected to
                                    their Firestore database, using role-based access for different support tiers.</p>
                            </div>
                            <div class="mt-auto pt-4 border-t border-surface-800 flex items-start">
                                <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/check-circle.svg"
                                     alt="Checkmark"
                                     class="w-4 h-4 mr-2 filter invert opacity-80 flex-shrink-0 mt-0.5"/>
                                <span class="text-sm font-medium text-white">
                                    <b>Result:</b> Reduced support resolution time by 30%.
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="group relative overflow-hidden p-8 rounded-lg ring-1 ring-inset ring-surface-800 bg-surface-900/50 flex flex-col transition-all duration-300 hover:ring-primary/30 animate-on-scroll scale-in delay-200"
                         data-spotlight-card>
                        <!-- Mouse spotlight effect -->
                        <div class="pointer-events-none absolute inset-0 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
                             data-spotlight></div>

                        <div class="relative z-10">
                            <div class="flex items-center mb-4">
                                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/20 mr-4 flex-shrink-0">
                                    <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/layout-template.svg"
                                         alt="Content Marketing Icon"
                                         class="w-6 h-6 filter invert opacity-80"/>
                                </div>
                                <h3 class="text-xl font-semibold text-white">Content Marketing Site</h3>
                            </div>
                            <div class="flex-grow mb-4">
                                <p class="text-sm text-surface-400 mb-2"><b>Challenge:</b> Client needed an easy way for
                                    non-technical marketers to update blog posts, case studies, and landing pages.</p>
                                <p class="text-sm text-white"><b>FireCMS Solution:</b> Set up FireCMS with predefined
                                    content schemas and markdown editors, enabling easy content updates.</p>
                            </div>
                            <div class="mt-auto pt-4 border-t border-surface-800 flex items-start">
                                <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/check-circle.svg"
                                     alt="Checkmark"
                                     class="w-4 h-4 mr-2 filter invert opacity-80 flex-shrink-0 mt-0.5"/>
                                <span class="text-sm font-medium text-white">
                                    <b>Result:</b> Empowered marketing team, freeing up dev resources.
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="group relative overflow-hidden p-8 rounded-lg ring-1 ring-inset ring-surface-800 bg-surface-900/50 flex flex-col transition-all duration-300 hover:ring-primary/30 animate-on-scroll scale-in delay-300"
                         data-spotlight-card>
                        <!-- Mouse spotlight effect -->
                        <div class="pointer-events-none absolute inset-0 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
                             data-spotlight></div>

                        <div class="relative z-10">
                            <div class="flex items-center mb-4">
                                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/20 mr-4 flex-shrink-0">
                                    <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/briefcase.svg"
                                         alt="Service Business Icon"
                                         class="w-6 h-6 filter invert opacity-80"/>
                                </div>
                                <h3 class="text-xl font-semibold text-white">Service Business</h3>
                            </div>
                            <div class="flex-grow mb-4">
                                <p class="text-sm text-surface-400 mb-2"><b>Challenge:</b> Needed a simple CRM to track
                                    client projects, communication logs, and assigned tasks.</p>
                                <p class="text-sm text-white"><b>FireCMS Solution:</b> Built a custom CRM interface
                                    using FireCMS collections for clients, projects, and logs with relations.</p>
                            </div>
                            <div class="mt-auto pt-4 border-t border-surface-800 flex items-start">
                                <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/check-circle.svg"
                                     alt="Checkmark"
                                     class="w-4 h-4 mr-2 filter invert opacity-80 flex-shrink-0 mt-0.5"/>
                                <span class="text-sm font-medium text-white">
                                    <b>Result:</b> Improved project tracking and client communication.
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Final CTA (keep consistent with site) -->
        <!-- CTA Section -->
        <section class="relative isolate bg-black py-16 sm:py-24">
            <SectionBackgroundAccents topLine={true}/>
            <div class="mx-auto max-w-7xl px-6 lg:px-8 text-center">
                <h2 class="text-3xl font-medium tracking-tight text-white sm:text-4xl mb-8 animate-on-scroll fade-in-up">
                    Ready to build something amazing?</h2>
                <div class="flex items-center justify-center gap-x-6 animate-on-scroll fade-in-up delay-100">
                    <a href="https://app.firecms.co"
                       class="inline-flex items-center gap-x-2 rounded-md bg-primary px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-primary-dark focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary transition-all duration-200 ease-in-out btn-glow">
                        Try FireCMS Cloud
                        <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/arrow-right.svg" alt=""
                             class="h-5 w-5 text-white filter invert"/>
                    </a>
                    <a href="/developers"
                       class="inline-flex items-center gap-x-2 text-white hover:text-primary transition-colors font-semibold">
                        View Documentation
                        <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/arrow-right.svg" alt=""
                             class="h-4 w-4 text-white filter invert"/>
                    </a>
                </div>
            </div>
        </section>
    </main>

</Layout>
