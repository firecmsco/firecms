<!-- Mobile menu sidebar -->
<div
    id="mobile-menu"
    class="fixed inset-0 z-40 transform -translate-x-full transition-transform duration-300 lg:hidden">
    <div
        id="mobile-menu-backdrop"
        class="absolute inset-0 bg-black bg-opacity-50"
        role="presentation">
    </div>
    <div class="relative w-64 h-full bg-gray-900 border-r border-slate-700 overflow-y-auto">
        <div class="p-4 space-y-2">
            <a class="block px-3 py-2 text-gray-300 hover:text-white hover:bg-gray-800 rounded transition-colors" href="/features">
                Why FireCMS
