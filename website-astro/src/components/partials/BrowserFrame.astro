---
import { defaultBorderMixin } from "../../migration/partials/styles";

interface Props {
    className?: string;
    style?: any;
    mode?: "light" | "dark";
}

const {
    className,
    style,
    mode = "dark"
} = Astro.props;
---

<div
    style={style}
    class:list={[
        "rounded-xl w-fit flex flex-col content-center justify-center border overflow-hidden",
        defaultBorderMixin,
        className
    ]}>
    <div
        class:list={[
            "h-11 rounded-t-lg flex justify-start items-center gap-1.5 px-3",
            mode === "dark" ? "bg-gray-900" : "bg-gray-100"
        ]}>
        <span class="w-3 h-3 rounded-full bg-red-400"></span>
        <span class="w-3 h-3 rounded-full bg-yellow-400"></span>
        <span class="w-3 h-3 rounded-full bg-green-400"></span>
    </div>

    <slot />

</div>