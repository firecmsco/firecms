---
import Panel from "../../Panel.astro";
import LinedSpace from "../layout/LinedSpace.astro";
import { defaultBorderMixin } from "../../../migration/partials/styles";
---

<Panel color={"transparent"}
       container={false}
       innerClassName={"flex flex-col text-white"}
       includePadding={false}
       includeMargin={false}>

    <div class="mt-32 mx-auto flex row items-center justify-center gap-2">

        <span
            class="text-sm font-semibold bg-gray-700 text-white px-2 py-1 rounded">MIT licensed</span>

        <a href="/llms.txt"
           target={"_blank"}
           rel={"noreferrer"}
           class="justify-center uppercase inline-flex items-center text-white bg-gray-950 hover:bg-gray-800 focus:ring-4 font-semibold rounded-lg text-sm px-5 py-2.5 text-center focus:ring-primary-900 hover:no-underline">
            âœ¨ AI docs ready!
            <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                 xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                      d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                      clip-rule="evenodd"></path>
            </svg>
        </a>

    </div>

    <LinedSpace size={"medium"}/>

    <div class:list={["relative flex justify-center mb-8 border-b border-0", defaultBorderMixin]}>
        <div
            class="flex flex-row gap-8 md:gap-12 justify-center items-center p-4">

            <img src="/img/firebase.svg" alt="Firebase" style={{
                width: 130,
                height: 150,
                maxWidth: "30%"
            }} />
            <img src="/img/reactjs-icon.svg" alt="React" style={{
                width: 150,
                height: 150,
                maxWidth: "35%"
            }} />
            <img src="/img/tailwind_logo.svg" alt="Tailwind CSS" style={{
                width: 140,
                height: 150,
                maxWidth: "30%"
            }} />
            <img src="/img/typescript_logo.svg" alt="TypeScript" style={{
                width: 130,
                height: 130,
                maxWidth: "30%"
            }} />
        </div>
    </div>

    <div
        class="max-w-6xl mx-auto text-center mb-12 px-8 py-4 md:px-8">
        <h2 class="mb-4 uppercase m-auto">
            Much more than a CMS
        </h2>
        <p class="text-xl md:text-2xl">
            <b>FireCMS</b> is a platform upon which thousands of companies build their <b>back-office
            applications</b> and <b>admin panels</b>.
            Open-source, headless, extensible, and fully customizable.
            <br/>
        </p>
    </div>

    <LinedSpace size={"larger"} position={"top"}/>
</Panel>