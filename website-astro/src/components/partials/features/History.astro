---
import Panel from "../../Panel.astro";
import TwoColumns from "../general/TwoColumns.astro";
import { defaultBorderMixin, CTAButtonMixin, CTACaret } from "../../../migration/partials/styles";

const isDarkTheme = true; // Hardcoded to replicate the behavior of the docusaurus stub
---

<Panel color={"light"}>
    <TwoColumns>
        <div slot="left">
            <p class="text-secondary uppercase font-bold font-mono">
                Solid foundation
            </p>

            <div class="flex items-center mb-4">
                <div
                    class="flex items-center justify-center text-white w-10 h-10 bg-gray-900 rounded-full shadow flex-shrink-0 mr-4">
                    <img src="/img/icons/magic.svg" alt="magic" class="w-6 h-6"/>
                </div>

                <h2 class="m-0">
                    <span>Changes </span>
                    <span class="text-primary">History</span>
                </h2>
            </div>

            <div class="mt-3 text-xl sm:mt-4 md:text-2xl">
                <p>
                    FireCMS provides a comprehensive
                    changes history feature that allows you to
                    track all modifications made to your data.
                </p>
                <p>
                    This feature is essential for maintaining data integrity and
                    ensuring that you can always revert to a previous state if needed.
                </p>
            </div>
        </div>
        <div slot="right">
            <div
                style={{
                    aspectRatio: "550 / 692",
                    maxHeight: "692px",
                    maxWidth: "550px"
                }}
                data-aos="fade-up"
                class="flex content-center justify-center">
                <img
                    key={isDarkTheme ? "dark" : "light"}
                    class:list={["pointer-events-none rounded-2xl border", defaultBorderMixin]}
                    width="100%"
                    src={'/img/history.png'}
                    alt="history"/>
            </div>
        </div>
    </TwoColumns>
</Panel>