---
import Panel from "../../Panel.astro";
import TwoColumns from "../general/TwoColumns.astro";
import { CTAButtonMixin, CTACaret, defaultBorderMixin } from "../../../migration/partials/styles";

const isDarkTheme = true; // Hardcoded to replicate the behavior of the docusaurus stub
---

<Panel color={"light"}>
    <TwoColumns>
        <div slot="left">
            <p class="text-secondary uppercase font-bold font-mono">
                Advanced editing
            </p>

            <div class="flex items-center mb-4">
                <div class="flex items-center justify-center text-white w-10 h-10 bg-gray-900 rounded-full shadow flex-shrink-0 mr-4">
                    <img src="/img/icons/magic.svg" alt="Magic" class="w-6 h-6"/>
                </div>

                <h2 class="m-0">
                    <span>AI </span>
                    <span class="text-primary">Integration</span>
                </h2>
            </div>

            <div class="mt-3 text-xl sm:mt-4 md:text-2xl">
                <p>
                    FireCMS with AI integration offers a
                    powerful
                    autofill
                    feature that can save you time and increase the
                    accuracy
                    of your data entry.
                </p>
                <p>
                    Try it in your project and data <b>for
                    free</b> and experience the power of the
                    latest GPT
                    models to enhance your data entry and streamline
                    your
                    business processes.
                </p>
            </div>

            <div class="mt-5 sm:mt-8">
                <a href="/openai/"
                   class:list={[CTAButtonMixin]}>
                    About this integration
                    <Fragment set:html={CTACaret} />
                </a>
            </div>
        </div>
        <div slot="right">
            <div
                style={{
                    aspectRatio: "550 / 692",
                    maxHeight: "692px",
                    maxWidth: "550px"
                }}
                data-aos="fade-up"
                class="flex content-center justify-center">
                <video
                    key={isDarkTheme ? "dark" : "light"}
                    class:list={["pointer-events-none rounded-2xl border", defaultBorderMixin]}
                    width="100%"
                    loop
                    autoplay
                    muted>
                    <source
                        src={isDarkTheme ? "/img/data/books_dark.mp4" : "/img/data/books_light.mp4"}
                        type="video/mp4"/>
                </video>
            </div>
        </div>
    </TwoColumns>
</Panel>