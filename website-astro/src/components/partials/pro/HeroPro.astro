---
import Panel from "../../Panel.astro";
import AnimatedGradientBackground from "../../AnimatedGradientBackground.astro";
import AppLink from "../../AppLink.astro";
import { CTAButtonDarkMixin, CTAButtonMixin, CTACaret } from "../../../migration/partials/styles";

interface Props {
    height?: number | string;
}

const { height = "300px" } = Astro.props;
---

<div class="w-full relative -mt-20 bg-gray-900">

    <AnimatedGradientBackground translateY={150} />
    <div>
        <Panel includeMargin={false}
               includePadding={false}
               color={"transparent"}
               innerClassName={"py-8 md:py-12 p-4 md:p-8"}
               className={"border-t-0"}>
            <div class="h-20"></div>
            <div style={{ height }}></div>
            <div
                style={{
                    fontSize: "7rem",
                }}
                class="text-white">
                <h1
                    class="m-0 block tracking-tight leading-none uppercase text-white">
                    <div class="block">
                        <span>FireCMS </span>
                        <span
                            style={{
                                WebkitBackgroundClip: "text",
                                backgroundClip: "text",
                                backgroundImage: "linear-gradient(to right, #EC4C51, #FA5574, #9543C1, #9543C1)"
                            }}
                            class="font-medium text-transparent bg-clip-text text-7xl md:text-8xl">PRO</span>
                    </div>

                </h1>
            </div>
        </Panel>
    </div>
    <Panel color={"secondary"}>
        <p class="text-gray-900 uppercase font-mono font-bold">
            No more limits. One month completely free.
        </p>
        <h2 class="mt-0 uppercase font-mono">
            The Comprehensive Self-Hosted CMS for Professional-Grade Projects
        </h2>
        <div class="flex flex-row gap-4 mt-8">
            <div class="flex flex-row items-center justify-center gap-4">
                <div
                    class="items-center select-all font-mono text-gray-800 p-4 px-6 bg-gray-200 border-gray-300 border-solid w-fit text-md font-bold inline-flex rounded-md">
                    yarn create firecms-app --pro
                </div>
                or
                <div
                    class="items-center select-all font-mono text-gray-800 p-4 px-6 bg-gray-200 border-gray-300 border-solid w-fit text-md font-bold inline-flex rounded-md">
                    npx create-firecms-app --pro
                </div>
            </div>
            <a
                class:list={[CTAButtonDarkMixin, "w-full lg:w-auto"]}
                href="docs/pro"
            >
                See the docs
            </a>
        </div>
        <p class="block">Access your <AppLink class="text-white font-semibold"
                                                    href="https://app.firecms.co/subscriptions"
        > subscriptions here</AppLink></p>
    </Panel>
    <div class="relative">
        <div class="h-full w-full mix-blend-multiply"
             style={{
                 opacity: .8,
                 width: "100vw",
                 height: "100%",
                 position: "absolute",
                 top: 0,
                 left: 0,
                 right: 0,
                 background: "linear-gradient(90deg, rgba(196,0,134,1) 0%, rgba(0,212,255,1) 47%, rgba(5,74,250,1) 99%)"
             }}></div>
        <Panel color={"transparent"} includePadding={false}
               innerClassName={"py-16 md:py-24 p-4 md:p-8"}>
            <div class="font-mono uppercase m-0 text-xl md:text-2xl">
                <p class="max-w-7xl text-2xl md:text-5xl font-bold tracking-tight text-white">
                    The most customizable headless CMS. Ever.
                </p>
                <p class="max-w-7xl text-2xl md:text-5xl font-bold tracking-tight text-white">
                    The perfect solution for your team or clients, built on top of Firebase,
                    MongoDB or any other backend.
                </p>
            </div>
            <div class="mt-8 flex flex-row flex-wrap gap-4">

                <a
                    class:list={[CTAButtonMixin, ""]}
                    href="https://calendar.google.com/calendar/u/0/appointments/schedules/AcZssZ0INW8ihjQ90S4gkdo8_rbL_Zx7gagZShLIpHyW43zDXkQDPole6a1coo1sT2O6Gl05X8lxFDlp?gv=true"
                    rel="noopener noreferrer"
                    target="_blank"
                >
                    Book a meeting
                </a>

                <a
                    class:list={[CTAButtonDarkMixin, ""]}
                    href="https://demo.firecms.co"
                >
                    Check the demo
                    <Fragment set:html={CTACaret} />
                </a>

            </div>
        </Panel>
    </div>

</div>